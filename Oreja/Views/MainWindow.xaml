        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Oreja - Test Window" 
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    
    <StackPanel Margin="20">
        <TextBlock Text="Oreja Application" 
                  FontSize="20" 
                  FontWeight="Bold" 
                  HorizontalAlignment="Center"
                  Margin="0,0,0,20"/>
        
        <TextBlock Text="This is a test window to verify the application can start." 
                  TextWrapping="Wrap"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,20"/>
        
        <Button Content="Test Button" 
                Width="100" 
                Height="30"/>
    </StackPanel>
</Window> 